{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./api-dist",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "api/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "src",
    "public",
    "dist"
  ]
}