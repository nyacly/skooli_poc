{
  "name": "skooli-ecommerce",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:vercel": "vercel dev",
    "dev:sandbox": "wrangler pages dev src/index.tsx --d1=skooli-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:vercel": "tsc -p tsconfig.api.json && node scripts/build-vercel.mjs",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name skooli",
    "deploy:vercel": "vercel --prod",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply skooli-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply skooli-production",
    "db:seed": "wrangler d1 execute skooli-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "supabase:migrate": "tsx scripts/migrate-to-supabase.ts",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:5173",
    "test:api": "curl http://localhost:5173/health"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.20.1",
    "@hono/zod-validator": "^0.4.2",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@supabase/supabase-js": "^2.55.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.1",
    "hono": "^4.9.2",
    "jose": "^5.2.0",
    "nanoid": "^5.1.5",
    "qrcode": "^1.5.4",
    "resend": "^6.0.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.4.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.0.0",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vercel": "^37.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
